<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xy.user.mapper.UserCaptainMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.xy.model.UserTeamRelation">
        <id column="id" property="id"/>
        <result column="userId" property="userId"/>
        <result column="numbers" property="numbers"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">

        id, userId, numbers

    </sql>

    <update id="updateNowCaptain" parameterType="java.util.List">

        update user_captain_relation  set
        <foreach collection="ucr" item="item" index="index" separator=",">
            user_id = #{item.userId}
            where user_captain_relation.numbers = #{item.numbers}
        </foreach>
    </update>

    <update id="updateTeamCaptainColumn" parameterType="com.xy.model.UserCaptainRelation">
            update team
                <set>
                   captain =(select username from user where id = (select id from user where user.id = #{userId}))
                </set>
               where numbers = #{numbers}
    </update>
</mapper>
