<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xy.mapper.RoleMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.xy.model.Role">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="admin_count" property="adminCount"/>
        <result column="create_time" property="createTime"/>
        <result column="status" property="status"/>
        <result column="sort" property="sort"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">

                id, name, description, admin_count, create_time, status, sort

    </sql>

    <select id="findRoleNameById" resultMap="BaseResultMap" parameterType="com.xy.model.Role">

                select * from role

    </select>

    <select id="findNowRoleByUserId" resultMap="BaseResultMap" parameterType="com.xy.model.Role">

            SELECT * FROM role WHERE role.id in (
                        SELECT ur.role_id FROM user_role_relation AS ur WHERE ur.user_id = #{id})

    </select>

    <update id="updateUserRole"  parameterType="com.xy.model.Role">
        UPDATE user u,user_role_relation urr set
        <if test="role != null and role !='' ">
            u.role=#{role},
        </if>
        <if test="role_id != null and role_id !='' ">
            urr.role_id=#{role_id}
        </if>
        <where>
            u.id = #{id} and urr.user_id = u.id
        </where>
    </update>

    <update id="updateUserRoleTwo" parameterType="com.xy.model.Role">
        UPDATE user u,user_role_relation urr set
        <if test="role != null and role !='' ">
            u.role='暂无角色',
        </if>
        <if test="role_id != null and role_id !='' ">
            urr.role_id=7
        </if>
        <where>
            u.id = #{id} and urr.user_id = u.id
        </where>
    </update>
    <select id="findAll" resultMap="BaseResultMap" parameterType="com.xy.model.Role">
            select * from role where 1 = 1 and id != 7
    </select>
    <select id="findAllRoles" resultType="com.xy.model.Role" parameterType="com.xy.model.Role">
            select * from role where 1 = 1
    </select>
</mapper>
